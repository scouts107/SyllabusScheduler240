import java.awt.*;
import java.awt.event.*;
import javax.swing.JComboBox;
import javax.swing.JFrame;
import javax.swing.JLabel;

public class ComboBoxExample extends JFrame implements ActionListener{
	String[] messageStrings = {"Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday", };
	JComboBox cmbMessageList = new JComboBox(messageStrings);
	JLabel lblText = new JLabel();
	
	
	public static void main(String[] args) {
		ComboBoxExample fr = new ComboBoxExample();
		fr.setVisible(true);
	}
	
	public ComboBoxExample() {
		setLayout(new FlowLayout());
		setSize(1080, 720);
		setTitle("DropBox for Days of the Week");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		cmbMessageList.setSelectedIndex(1);;
		cmbMessageList.addActionListener(this);
		add(cmbMessageList);
		add(lblText);
	}
	
	public void actionPerformed(ActionEvent e) {
		if (e.getSource() == cmbMessageList) {
			JComboBox cb = (JComboBox)e.getSource();
			String msg = (String)cb.getSelectedItem();
			switch (msg) {
			case "Monday": lblText.setText("Monday: ");
				break;
			case "Tuesday": lblText.setText("Tuesday: ");
				break;
			case "Wednesday": lblText.setText("Wednesday: ");
				break;
			case "Thursday": lblText.setText("Thursday: ");
				break;
			case "Friday": lblText.setText("Friday: ");
				break;
			case "Saturday": lblText.setText("Saturday: ");
				break;
			case "Sunday": lblText.setText("Sunday: ");
				break;
			default: lblText.setText("Sorry, nothing was chosen");
			}
		}
	}

}
